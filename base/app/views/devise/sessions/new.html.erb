<% content_for :headers do%>
  <%= render :partial => 'layouts/devise_style' %>
<%end%>

<div id="welcome">
  <article class="right">
    <div class="sig-in">
      <h2>
        <%= t('sign_in') %>
      </h2>
      <%= form_for(resource, :as => resource_name, :url => user_session_path) do |f| %>
        <%= devise_error_messages! %>
       
        <%= f.label :email %>

        <%= f.email_field :email, :class => "form_tag" %>
    
        <%= f.label :password %>

        <%= f.password_field :password, :class => "form_tag" %>
   
        <% if devise_mapping.rememberable? -%>
          <div id="remember">
            <%= f.check_box :remember_me %> 
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        
        <%= f.submit t('action.send'), :class =>"btn storePass" %>
      </div>  
      <hr class="soften">
      <div class="options">
        <%= render :partial => "devise/shared/links" %>  
      </div>
    <% end %>
  </article>
</div>
