<% content_for :headers do%>
  <%= render :partial => 'layouts/devise_style' %>
<%end%>

<div id="registration">
  <article class="left">
    <header>
      <h2>
        <% content_for :title do%>
          <%= t('welcome', :site => t('site.name')) %>
        <%end%>
      </h2>
    </header>
    <div class="thumbnail inline">
      <header>
        <h6>title</h6>
      </header>
      <%= render :partial => 'frontpage/caracteristics' %>
    </div>
    <%= render :partial => 'layouts/search' %>
  </article>

  <div id="login" class="right">
    <h2>
      <%= t('sign_up').capitalize %>
    </h2>
 
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    <div class="form_row">
      <div class="form_label"><%= f.label :name %>
      </div>
      <div class="form_field"><%= f.text_field :name, :class =>"form_tag"  %>
      </div>
    </div>
    <div class="form_row">
      <div class="form_label"><%= f.label :email %>
      </div>
      <div class="form_field"><%= f.text_field :email, :class =>"form_tag"  %>
      </div>
    </div>
    <div class="form_row">
      <div class="form_label"><%= f.label :password %>
      </div>
      <div class="form_field"><%= f.password_field :password, :class =>"form_tag", :id => "password"  %>
      </div>
    </div>
    <div class="form_row">
      <div class="form_label" id="user_password_confirmation_label">
        <%= f.label :password_confirmation %>
      </div>
      <div class="form_field"><%= f.password_field :password_confirmation, :class =>"form_tag"  %></div>
    </div>
    <div class="form_row center">
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to t('confirmation.not_received.long'), new_confirmation_path(resource_name) %><br />
      <% end -%>
    </div>
    <div id="devise_links">
      <%= render :partial => "devise/shared/links" %>
    </div>
    <div class="form_row center">
      <div class="btn_login"><%= f.submit t('action.accept').capitalize,:class=>"button storePass"%></div>
    </div>
  <% end %>
</div>


