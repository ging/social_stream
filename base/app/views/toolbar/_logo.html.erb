<div id="avatar_profile">
  <% if subject == current_subject %>
    <%= subject.name %>
          
    <%= link_to image_tag(subject.logo.url(:profile), :alt => subject.name , :size => "140x140", :id => "current_avatar_img"), subject %>    
    <div class="logo_menu logo_caption">    
      <%= link_to t('avatar.profile_change'), avatars_path  %>       
    </div>        
  <% else %>
    <%= subject.name %>
    <%= link_to image_tag(subject.logo.url, :alt => subject.name , :size => "140x140"), subject %>
  <% end %>
</div>
