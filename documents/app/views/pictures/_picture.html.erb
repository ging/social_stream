<%= div_for picture do %>

  <div class="thumb">
    <%= link_to thumb_for(picture, "170x127#"),
                download_document_path(picture) %>
  </div>

  <div class="text">
    <h6>
      <%= picture.title %>
    </h6>
    <div class="description">
      <%= simple_format "#{ auto_link(picture.description) } #{ link_to t('details.msg'), picture, :class => 'view_more' }" %>
    </div>
  </div>
<% end %>

<div class="clearfloat"></div>
