<%= div_for picture do %>
  <div class="picture_show">
    <%= link_to thumb_for(picture, 500),
        download_document_path(picture),
        :id => dom_id(picture) + "_a",
        :type => picture.type, 
		    :title => picture.file_file_name,
		    :path => document_path(picture) %>
  </div>
<% end %>
